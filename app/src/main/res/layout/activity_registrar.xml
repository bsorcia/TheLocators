<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarActivity">

    <RelativeLayout
        android:id="@+id/lytRelative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/txt">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="84dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="120dp"
            tools:srcCompat="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/tvNombreR"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_below="@+id/imageLogo"/>
        <EditText
            android:id="@+id/txtNombreUsuarioR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNombreR"/>
        <TextView
            android:id="@+id/tvCorreoR"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo Electronico"
            android:layout_below="@+id/txtNombreUsuarioR"/>
        <EditText
            android:id="@+id/txtEmailR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/tvCorreoR"/>
        <TextView
            android:id="@+id/tvPasswordR"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:layout_below="@+id/txtEmailR"/>
        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_below="@+id/tvPasswordR"/>
        <TextView
            android:id="@+id/tvTelefonoR"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:layout_below="@+id/txtPassword"/>
        <EditText
            android:id="@+id/txtTelefonoR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@+id/tvTelefonoR"/>
        <Button
            android:id="@+id/btnLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="¡Registrarse!"
            android:inputType="text"
            android:onClick="onClickRegistrarUsuario"
            android:layout_below="@+id/txtTelefonoR"/>
    </RelativeLayout>

</RelativeLayout>